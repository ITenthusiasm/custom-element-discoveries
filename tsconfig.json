{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "preserve",

    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": false,

    "noEmit": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "library-tests", "playwright.config.ts", "vite.config.ts", "svelte.config.js"]
}
