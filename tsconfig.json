{
  "compilerOptions": {
    "target": "ES2020",
    // "module": "NodeNext",
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "build",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "jsx": "react-jsx" // For Testing Only (currently)
  },
  // Technically speaking, a Jest config wouldn't be in a production build
  "include": ["src/**/*", "jest.config.ts"]
}
